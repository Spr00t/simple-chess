cmake_minimum_required(VERSION 2.8.2)

project(boost-download NONE)

include(ExternalProject)
ExternalProject_Add(boost
  URL               "https://dl.bintray.com/boostorg/release/1.65.1/source/boost_1_65_1.tar.gz"
  SOURCE_DIR        "${CMAKE_BINARY_DIR}/boost-src"
  BINARY_DIR        "${CMAKE_BINARY_DIR}/boost-build"
  UPDATE_COMMAND    cd ${CMAKE_BINARY_DIR}/boost-src/ && ${CMAKE_BINARY_DIR}/boost-src/bootstrap.sh --prefix=${CMAKE_CURRENT_BINARY_DIR}/boost-build/
  CONFIGURE_COMMAND ""
  BUILD_COMMAND     cd ${CMAKE_BINARY_DIR}/boost-src/ && ${CMAKE_BINARY_DIR}/boost-src/b2 
  INSTALL_COMMAND   cd ${CMAKE_BINARY_DIR}/boost-src/ && ${CMAKE_BINARY_DIR}/boost-src/b2 install
)
